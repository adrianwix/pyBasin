{
    "system": {
        "name": "damped_driven_pendulum",
        "description": "Damped driven pendulum ODE system from Menck et al. (2013)",
        "dof": 2
    },
    "ode_parameters": {
        "alpha": 0.1,
        "T": 0.5,
        "K": 1.0
    },
    "time_integration": {
        "t_start": 0.0,
        "t_end": 1000.0,
        "rtol": 1e-8,
        "atol": 1e-6,
        "max_integration_time_seconds": 120,
        "n_steps": 500
    },
    "initial_conditions": {
        "n_samples": 10000,
        "roi_min": [
            -2.6180339887498949,
            -10.0
        ],
        "roi_max": [
            3.6651914291880849,
            10.0
        ],
        "sampling_strategy": "uniform",
        "random_seed": 42
    },
    "solvers": {
        "matlab": {
            "method": "ode45",
            "parallel": true
        },
        "scipy": {
            "method": "DOP853",
            "alternative_method": "RK45"
        },
        "jax_diffrax": {
            "method": "Dopri5"
        },
        "torchode": {
            "method": "dopri5",
            "alternative_method": "tsit5"
        },
        "torchdiffeq": {
            "method": "dopri5",
            "alternative_method": "rk4"
        }
    },
    "benchmark_settings": {
        "n_warmup_runs": 1,
        "n_benchmark_runs": 3,
        "devices": [
            "cpu",
            "cuda"
        ]
    }
}